@model IEnumerable<Final.Models.PesanModel>
@{
    ViewBag.Title = "Pesan";
}
<div class="TokoHead">
    <div class="TokoContent">
        <div class="TokoContent1"><mamam>nomnom</mamam></div>
        <div class="TokoContent2"><span class="glyphicon glyphicon-user"> </span> Hi, @Model.ElementAt(0).Customer</div>
    </div>
</div>

<div class="TokoBody">
    <div class="TokoContent" style="padding:50px 50px;">
        @Html.ActionLink("Toko", "Toko", new { @Id = ViewBag.IdToko }, new { @class = "menupesan" })
        
        <span style="font-size:24px">[Pesanan Anda @Model.ElementAt(0).Customer]</span> <br />
        <hr />
        @foreach (var item in Model)
        {
            
            <span style="color:#c0392b; font-size:24px;">@item.Menu </span> <br />
            @item.Toko <br />
            <span style="color:#ff6600">Rp.@item.Harga </span> <br /><br />
            @Html.ActionLink("Delete", "Pesans", new { @Id = item.Id, @IdCustomer = ViewBag.IdCustomer, @IdToko = ViewBag.IdToko, @IdMenu = ViewBag.IdMenu, @Saldo = ViewBag.Saldo }, new { @class = "menupesan" })
            <hr />

        }
        <span style="font-size:24px">[Total Pesanan] : Rp.@ViewBag.total</span> <br />
        <span style="font-size:24px">[Saldo Anda]: Rp.@ViewBag.saldo</span> <br />
        setelah memilih metode pembayaran, Anda akan langsung keluar dari transaksi belanja anda<br />
        <span style="font-size:24px">[Metode Pembayaran]: </span>
        @Html.ActionLink("Saldo", "Tutup", new { @total = ViewBag.total, @User = Model.ElementAt(0).Customer, @Id=1 }, new { @class = "menupesan" })
        @Html.ActionLink("Tunai", "Tutup", new { @total = ViewBag.total, @User = Model.ElementAt(0).Customer, @Id=0 }, new { @class = "menupesan" })
    </div>
    @Html.ActionLink("Logout", "Delete", "Home", new { @class = "menupesan" })
</div>